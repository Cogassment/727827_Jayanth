
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Royal London Group</title>
    <link rel="icon" type="image/png" href="~/Images/rlgfav.png">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/MyStyles.css" rel="stylesheet" /> <!--My Custom Styles-->
    <!--
    Developed using Bootstrap 4 and jquery 3.3.1
    -->
</head>
<body>
    <!--File Upload -->
    <div id="FileBrowse" class="card col-md-12">
        <div class="card-body">
            <div class="card-group" style="align-items:baseline;overflow-x:hidden">
                <input type="file" id="Files" accept=".xlsx,.xls" />
                <button type="button" id="UploadBtn" class="btn fa fa-upload" style="overflow-x:hidden;"> <span>Upload</span> </button>
            </div>
        </div>
    </div>

    <!--Loading picture-->
    <div id="overlay" class="loader">
    </div>

    <!--Generated Table-->
    <div class="table-responsive col-md-12" id="roottable">
        <table id="mytable" class="table" style="width:0%;height:0%;box-shadow: -1px 8px 27px 5px rgba(0,0,0,0.5);">
            <thead></thead>
            <tbody></tbody>
        </table>
    </div>

    <!--Error Indicator-->
    <button id="modalbtn" hidden type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" data-backdrop="static" data-keyboard="false"></button>
    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Error..</h4>
                </div>
                <div class="modal-body">
                    Please Select a Valid Excel File.
                </div>
                <div class="modal-footer">
                    <button id="closebtn" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/MyScript.js"></script><!--Script with jquery and ajax calls-->

</body>
</html>
